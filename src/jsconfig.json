{
	"compilerOptions": {
		"target": "ES2017",
		"checkJs": true, // Keep the type check for JavaScript
		"noEmit": true, // Prevents any files from being compiled
		"lib": [ "es2017", "dom" ] // Füge "dom" hinzu, um Browser-APIs zu erkennen
	},
	"include": [
		"**/*.js" // Includes all JavaScript files in the directory
	],
	"typeAcquisition": {
		"include": [ "dompurify" ] // Hier fügst du DOMPurify hinzu, wenn Typdefinitionen verfügbar sind
	}
}